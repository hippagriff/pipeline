
&.login-container
  absPos(top: 0, right: 0, bottom: 0, left: 0)
  background-image: linear-gradient(to bottom, startBlue, endBlue)
  background-color: startBlue
  color: white

.logo
  absPos(left: 0px)
  opacity: 1
  height: 40px
  background-image: url('../../images/fake_logo.png')
  background-position: 0px 0px
  background-repeat: no-repeat
  background-size: 39px
  padding-left: 50px
  font-size: 30px
  line-height: 40px

.form-container
  absPos(top: 40%, right: 0, left: 15%)
  height: 100px
  overflow: visible

.fields
  absPos(top: 50px, left: 0px, right: 0)
  height: 40px
  input
    font-size: 18px
  button
    font-size: 17px

.username
  absPos()
  width: 195px
  
.password
  width: 195px
  absPos(left: 210px)

.login-btn
  absPos(top: 0px, left: 415px)
  padding: 3px

.login-spinner
  absPos(top: 8px, left: 455px)
  width: 20px
  height: 20px

.remember-me
  absPos(top: 32px)
  font-size: 14px
  color: lightGray
  input
    -webkit-appearance: none
    -moz-appearance: none
    -ms-appearance: none
    width: 10px
    height: 10px
    border: 1px solid lightGray
    background-color: none
    margin-right: 4px
    margin-left: 4px
    cursor: pointer
  input:checked
    background-color: white
  label
    cursor: pointer


.footer
  absPos(right: 0, bottom: 0, left: 0)
  text-align: right
  height: 20px
  margin: 0px 0px 4px 0px
  font-size: 13px
  color: subtleGreen
  li
    display: inline-block
    border-right: 1px solid lightGray
    padding: 0px 10px 0px 10px
    cursor: pointer
  li:last-child
    border: none






