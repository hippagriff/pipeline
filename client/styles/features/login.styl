
&.login-container
  absPos(top: 0, right: 0, bottom: 0, left: 0)
  background-image: linear-gradient(top, startBlue, endBlue)
  color: white

.logo
  absPos(left: 125px)
  opacity: 1
  height: 40px
  background-image: url('../../images/fake_logo.png')
  background-position: 0px 0px
  background-repeat: no-repeat
  background-size: 39px
  padding-left: 50px
  font-size: 30px
  line-height: 40px

.logo-enter
  left: -600px
  transition: left .3s ease-out
  &.logo-enter-active
    left: 125px

.logo-leave
  left: 125px
  transition: left .3s ease-out
  &.logo-leave-active
    left: -600px

.form-container
  absPos(top: 40%, right: 0, left: 0)
  height: 100px
  overflow: hidden

.fields
  absPos(top: 50px, left: 125px)
  height: 40px
  width: 465px
  input
    font-size: 18px
  button
    font-size: 17px
  
.fields-enter
  left: 1600px
  transition: left .3s ease-out
  &.fields-enter-active
    left: 125px

.fields-leave
  left: 125px
  transition: left .3s ease-out
  &.fields-leave-active
    left: 1600px

.login-spinner
  absPos(top: 8px, right: 0px)
  width: 20px
  height: 20px


.footer
  absPos(right: 0, bottom: 0, left: 0)
  text-align: right
  height: 20px
  margin: 0px 0px 4px 0px
  font-size: 13px
  color: subtleGreen
  li
    display: inline-block
    border-right: 1px solid lightGray
    padding: 0px 10px 0px 10px
    cursor: pointer
  li:last-child
    border: none






